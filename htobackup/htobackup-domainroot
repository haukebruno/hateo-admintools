#!/bin/bash

#Define variables, some has default values

DOCROOT="/var/www"
USER=""
PASSWORD=""
DOMAIN=""
TRANSPORT="ftp"
REMOTE=""
ENCRYPTKEY=""

#Usage

function help() {

  echo -e "\r\nUsage:
  -d, --docroot DIR\t\t\t\t Global directory for DocumentRoots (/var/www)
  -D, --domain DOMAINNAME\t\t\t Specific domain, default is all
  -k, --encryption-passphrase YOURPASSPHRASE\t Set passphrase for encrypted files
  -p, --password REMOTEPASSWORD\t\t\t Password for remote user
  -r, --remote REMOTEHOST\t\t\t IP or name from remote host
  -t, --transfer [ftp]\t\t\t\t Transfer type (ftp)
  -u, --user REMOTEUSER\t\t\t\t Remote username
  -h, --help\t\t\t\t\t Print this help
  "
  exit 0

}

#Error handling

function missing_arg() {

  echo -e "$0: ERROR: Missing argument for $1\r\n"
  exit 1

}

#Main function

function backup_domainroot() {

  for dir in $(ls $DOCROOT/$DOMAIN)
  do

    tar -cjf - -p --atime-preserve -C $DOCROOT $dir |openssl des3 -salt -k $ENCRYPTKEY |dd of=/tmp/$dir.des3

    ftp -inv $REMOTE << EOF
    user $USER $PASSWORD
    put /tmp/$dir.des3 domains/$dir.des3
    bye
EOF
  
    rm /tmp/$dir.des3

  done

}

#Command line options

if [[ "$#" -eq 0 ]] || [[ "$#" -eq 1 && "$1" == "-h" || "$1" == "--help" ]] 
then

  help

fi

while [ "$#" -gt 0 ]
do

  case $1 in

    -d|--docroot)
      if [[ "$#" -gt 2 && "$2" != -* ]]
      then
      
        DOCROOT=$2
        shift 2

      else

	missing_arg $1

      fi
      ;;

    -D|--domain)
      if [[ "$#" -gt 2 && "$2" != -* ]]
      then

        DOMAIN=$2
        shift 2

      else

        missing_arg $1

      fi
      ;;

    -t|--transfer)
      ;;

    -u|--user)
      if [[ "$#" -ge 2 && "$2" != -* ]]
      then
      
        USER=$2
        shift 2

      else

        missing_arg $1

      fi
      ;;

    -p|--password)
      if [[ "$#" -gt 2 && "$2" != -* ]]
      then

        PASSWORD=$2
        shift 2

      else

        missing_arg $1

      fi
      ;;

    -r|--remote)
      if [[ "$#" -gt 2 && "$2" != -* ]]
      then

        REMOTE=$2
        shift 2

      else

        missing_arg $1

      fi
      ;;

    -k|--encryption-passphrase)
      if [[ "$#" -gt 2 && "$2" != -* ]]
      then

        ENCRYPTKEY=$2
        shift 2

      else

        missing_arg $1

      fi
      ;;

  esac

done


backup_domainroot
